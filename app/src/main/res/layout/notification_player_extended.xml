<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/dark_black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNotificationExtendedAlbum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginHorizontal="8dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotificationExtendedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:text="Title" />

            <TextView
                android:id="@+id/tvNotificationExtendedArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="Artist" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnNotificationExtendedClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="0"
            android:src="@drawable/ic_white_close"
            app:imageView_duration="200" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnNotificationExtendedPrev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_previous_button" />

        <ImageView
            android:id="@+id/btnNotificationExtendedPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/ic_play_button" />

        <ImageView
            android:id="@+id/btnNotificationExtendedNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_next_button" />

    </LinearLayout>
</LinearLayout>


