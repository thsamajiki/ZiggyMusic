<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/noti_extended_height"
    android:background="@color/dark_black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xs"
        android:layout_marginBottom="@dimen/space_xs"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNotificationExtendedAlbum"
            android:layout_width="@dimen/noti_extended_album_art_size"
            android:layout_height="@dimen/noti_extended_album_art_size"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/space_sm"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotificationExtendedTitle"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_sm"
                android:layout_marginEnd="@dimen/space_xl"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text_size"
                tools:text="Title" />

            <TextView
                android:id="@+id/tvNotificationExtendedArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_sm"
                android:layout_marginTop="@dimen/space_sm"
                android:layout_marginEnd="@dimen/space_xl"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                tools:text="Artist" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnNotificationExtendedClose"
            android:layout_width="@dimen/noti_extended_close"
            android:layout_height="@dimen/noti_extended_close"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/space_xl"
            android:src="@drawable/ic_white_close"
            app:imageView_duration="200" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnNotificationExtendedPrev"
            android:layout_width="@dimen/noti_extended_btn"
            android:layout_height="@dimen/noti_extended_btn"
            android:src="@drawable/ic_prev_button" />

        <ImageView
            android:id="@+id/btnNotificationExtendedPlay"
            android:layout_width="@dimen/noti_extended_btn"
            android:layout_height="@dimen/noti_extended_btn"
            android:layout_marginHorizontal="@dimen/space_18"
            android:src="@drawable/ic_play_button" />

        <ImageView
            android:id="@+id/btnNotificationExtendedNext"
            android:layout_width="@dimen/noti_extended_btn"
            android:layout_height="@dimen/noti_extended_btn"
            android:src="@drawable/ic_next_button" />

    </LinearLayout>
</LinearLayout>