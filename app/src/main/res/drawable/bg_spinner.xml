<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/black" />
                    <stroke android:width="1dp" android:color="@color/light_gray" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="15dp" android:end="10dp" android:start="10dp" android:top="15dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_arrow_drop_down" android:end="5dp" android:gravity="center_vertical|end" />
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/black" />
                    <stroke android:width="1dp" android:color="@color/light_gray" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="15dp" android:end="10dp" android:start="10dp" android:top="15dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_arrow_drop_down" android:end="5dp" android:gravity="center_vertical|end" />
        </layer-list>
    </item>
</selector>