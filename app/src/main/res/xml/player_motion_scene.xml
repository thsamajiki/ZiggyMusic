<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/collapsedToExpanded"
        motion:constraintSetEnd="@id/expanded"
        motion:constraintSetStart="@id/collapsed" />

    <Transition
        android:id="@+id/expandedToCollapsed"
        motion:constraintSetEnd="@id/collapsed"
        motion:constraintSetStart="@id/expanded" />

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/toolbarNowPlayingTitle"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/albumBackground"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/ivAlbumArt"
            android:layout_width="@dimen/album_art_size_collapsed"
            android:layout_height="@dimen/album_art_size_collapsed"
            android:layout_marginStart="@dimen/space_xs"
            android:layout_marginTop="@dimen/space_xs"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tvSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_xs"
            motion:layout_constrainedWidth="true"
            motion:layout_constraintBottom_toTopOf="@id/tvSongArtist"
            motion:layout_constraintEnd_toStartOf="@id/ivPlayPause"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toEndOf="@id/ivAlbumArt"
            motion:layout_constraintTop_toTopOf="@id/ivAlbumArt">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="14" />

        </Constraint>

        <Constraint
            android:id="@+id/tvSongArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_xs"
            motion:layout_constrainedWidth="true"
            motion:layout_constraintBottom_toBottomOf="@id/ivAlbumArt"
            motion:layout_constraintEnd_toStartOf="@id/ivPlayPause"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toEndOf="@id/ivAlbumArt"
            motion:layout_constraintTop_toBottomOf="@id/tvSongTitle">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="14" />

        </Constraint>

        <Constraint
            android:id="@+id/tvSongAlbum"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/animationViewVisualizer"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/bluetooth"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/vPlayer"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/layoutVolume"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/sbPlayer"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/tvCurrentPlayTime"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/tvTotalTime"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/ivPlayPause"
            android:layout_width="@dimen/icon_play_pause"
            android:layout_height="@dimen/icon_play_pause"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toBottomOf="@id/ivAlbumArt"
            motion:layout_constraintEnd_toStartOf="@id/ivNext"
            motion:layout_constraintTop_toTopOf="@id/ivAlbumArt" />

        <Constraint
            android:id="@+id/ivNext"
            android:layout_width="@dimen/icon_prev_next"
            android:layout_height="@dimen/icon_prev_next"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toBottomOf="@id/ivAlbumArt"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/ivAlbumArt" />

        <Constraint
            android:id="@+id/ivPrevious"
            android:layout_width="@dimen/icon_prev_next"
            android:layout_height="@dimen/icon_prev_next"
            android:src="@drawable/ic_prev_button"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/ivPlayPause"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/vPlayer" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@+id/albumBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:clickable="false"
            android:focusable="false"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/vPlayer"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/toolbarNowPlayingTitle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            motion:contentInsetStart="0dp"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tvSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xxxl"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="@string/current_song_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/toolbarNowPlayingTitle">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="20" />

        </Constraint>

        <Constraint
            android:id="@+id/ivAlbumArt"
            android:layout_width="@dimen/album_art_size_expanded"
            android:layout_height="@dimen/album_art_size_expanded"
            android:layout_marginTop="@dimen/space_xl"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/tvSongTitle" />

        <Constraint
            android:id="@+id/tvSongArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_25"
            android:ellipsize="marquee"
            android:gravity="center"
            android:text="@string/current_song_artist"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/ivAlbumArt">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="17" />

        </Constraint>

        <Constraint
            android:id="@+id/tvSongAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_25"
            android:ellipsize="marquee"
            android:gravity="center"
            android:text="@string/current_song_album"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            motion:layout_constraintEnd_toStartOf="@id/bluetooth"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toEndOf="@id/animationViewVisualizer"
            motion:layout_constraintTop_toBottomOf="@id/tvSongArtist" />

        <Constraint
            android:id="@+id/animationViewVisualizer"
            android:layout_width="@dimen/animation_visualizer"
            android:layout_height="@dimen/animation_visualizer"
            android:layout_marginEnd="@dimen/space_xl"
            motion:layout_constraintBottom_toBottomOf="@id/tvSongAlbum"
            motion:layout_constraintEnd_toStartOf="@id/tvSongAlbum"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/tvSongAlbum"
            motion:lottie_autoPlay="true"
            motion:lottie_loop="true"
            motion:lottie_rawRes="@raw/audio_visualizer" />

        <Constraint
            android:id="@+id/bluetooth"
            android:layout_width="@dimen/bluetooth"
            android:layout_height="@dimen/bluetooth"
            android:layout_marginStart="@dimen/space_xl"
            android:src="@drawable/ic_airplay"
            motion:layout_constraintBottom_toBottomOf="@id/tvSongAlbum"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/tvSongAlbum"
            motion:layout_constraintTop_toTopOf="@id/tvSongAlbum" />

        <Constraint
            android:id="@+id/vPlayer"
            android:layout_width="0dp"
            android:layout_height="@dimen/player_view_height"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:use_controller="false" />

        <Constraint
            android:id="@+id/layoutVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xxxl"
            android:paddingStart="@dimen/layout_volume_padding"
            android:paddingEnd="@dimen/layout_volume_padding"
            motion:layout_constraintBottom_toTopOf="@id/vPlayer"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/sbPlayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/teal_200"
            android:progressTint="@color/teal_200"
            android:thumbTint="@color/teal_200"
            motion:layout_constraintBottom_toTopOf="@id/vPlayer"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/vPlayer" />

        <Constraint
            android:id="@+id/tvCurrentPlayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginTop="@dimen/space_4"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            motion:layout_constraintStart_toStartOf="@id/layoutVolume"
            motion:layout_constraintTop_toBottomOf="@id/layoutVolume" />

        <Constraint
            android:id="@+id/tvTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            motion:layout_constraintEnd_toEndOf="@id/layoutVolume"
            motion:layout_constraintTop_toBottomOf="@id/layoutVolume" />

        <Constraint
            android:id="@+id/ivPlayPause"
            android:layout_width="@dimen/icon_play_pause"
            android:layout_height="@dimen/icon_play_pause"
            android:src="@drawable/ic_play_button"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/vPlayer" />

        <Constraint
            android:id="@+id/ivNext"
            android:layout_width="@dimen/icon_prev_next"
            android:layout_height="@dimen/icon_prev_next"
            android:src="@drawable/ic_next_button"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.2"
            motion:layout_constraintStart_toEndOf="@id/ivPlayPause"
            motion:layout_constraintTop_toTopOf="@id/vPlayer" />

        <Constraint
            android:id="@+id/ivPrevious"
            android:layout_width="@dimen/icon_prev_next"
            android:layout_height="@dimen/icon_prev_next"
            android:src="@drawable/ic_prev_button"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/ivPlayPause"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/vPlayer" />

        <Constraint
            android:id="@+id/ivRepeatMode"
            android:layout_width="@dimen/icon_repeat_mode"
            android:layout_height="@dimen/icon_repeat_mode"
            android:layout_marginEnd="@dimen/space_xl"
            android:src="@drawable/ic_repeat_all"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/vPlayer" />

        <Constraint
            android:id="@+id/ivShuffleMode"
            android:layout_width="@dimen/icon_shuffle_mode"
            android:layout_height="@dimen/icon_shuffle_mode"
            android:layout_marginStart="@dimen/space_xl"
            android:src="@drawable/ic_shuffle_off"
            motion:imageView_duration="200"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/vPlayer" />

    </ConstraintSet>
</MotionScene>